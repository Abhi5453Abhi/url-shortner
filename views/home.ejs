<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        h1 {
            text-align: center;
            margin-top: 40px;
            color: #333;
        }

        form {
            text-align: center;
            margin-top: 20px;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-size: 16px;
        }

        input {
            width: 80%;
            padding: 10px;
            margin-bottom: 20px;
            font-size: 16px;
        }

        button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #4caf50;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        h1,
        a {
            color: #333;
            text-decoration: none;
        }

        h1 {
            margin-top: 40px;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4caf50;
            color: #fff;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        img {
            display: block;
            margin: 20px auto;
            max-width: 100%;
            height: auto;
        }

        .clickable-link {
            cursor: pointer;
            color: #3498db !important;
            /* Add !important to ensure the color is applied */
            text-decoration: underline;
        }

        .clickable-link:hover {
            color: #2077b2 !important;
            /* Add !important to ensure the color is applied on hover */
        }
    </style>
</head>

<body>
    <h1>URL Shortener</h1>

    <form method="POST" action="/url">
        <label for="url">Enter your original URL:</label>
        <input type="text" id="url" name="url" placeholder="https://example.com" required>
        <button type="submit">Generate</button>
    </form>

    <% if(locals.shortId) { %>
    <h1>Shortened URL: <a class="clickable-link"
            href="https://snipzip.onrender.com/url/<%= locals.shortId %>">https://snipzip.onrender.com/url/<%= locals.shortId %></a>
    </h1>
    <% } %>

    <% if(locals.qrCodeData) { %>
    <img src="data:image/png;base64,<%= locals.qrCodeData %>" alt="QR Code">
    <% } %>

    <% if(locals.allUrls) { %>
    <table>
        <thead>
            <th>S. No.</th>
            <th>Short ID</th>
            <th>Redirect URL</th>
            <th>Clicks</th>
        </thead>
        <tbody>
            <% locals.allUrls.forEach((url, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td class="clickable-link"><a
                        href="https://snipzip.onrender.com/url/<%= url.shortId %>"><%= url.shortId %></a>
                </td>
                <td><%= url.redirectUrl %></td>
                <td><%= url.visitHistory.length %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <% } %>
</body>

</html>